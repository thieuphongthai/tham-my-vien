<!-- Modal Create Service Note -->
<div class="modal fade" id="create-service-note-modal" tabindex="-1" aria-labelledby="create-service-note"
	aria-hidden="true">
	<div class="modal-dialog modal-xl">
		<div class="modal-content">
			<div class="modal-header bg-info text-light">
				<h5 class="modal-title" id="create-service-note-title">Tạo phiếu dịch vụ</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
					<li class="nav-item" role="presentation">
						<button class="nav-link active" id="pills-profile-customer-tab" data-bs-toggle="pill"
							data-bs-target="#pills-profile-customer" type="button" role="tab" aria-controls="pills-home"
							aria-selected="true">Thông tin khách hàng</button>
					</li>
					<li class="nav-item" role="presentation">
						<button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill"
							data-bs-target="#pills-service" type="button" role="tab" aria-controls="pills-profile"
							aria-selected="false">Thông tin dịch vụ</button>
					</li>
				</ul>
				<form method="POST" id="create-service-note-form" class="row">
					<div class="tab-content" id="pills-tabContent">
						<div class="tab-pane fade show active" id="pills-profile-customer" role="tabpanel"
							aria-labelledby="pills-home-tab">
							<ul class="list-group">
								<li class="list-group-item">
									<div class="form-floating mb-3">
										<input type="text" class="form-control" id="create-service-note-firstLastName"
											name="name" readonly>
										<label for="name">Họ tên</label>
									</div>
									<div class="form-floating mb-3">
										<input type="date" class="form-control" id="create-service-note-birth"
											name="birth" readonly>
										<label for="birth">Ngày sinh</label>
									</div>
									<div class="form-floating mb-3">
										<input type="text" class="form-control" id="create-service-note-gender"
											name="gender" readonly>
										<label for="gender">Giới tính</label>
									</div>
									<div class="form-floating mb-3">
										<input type="email" class="form-control" id="create-service-note-email"
											name="email" readonly>
										<label for="email">Email address</label>
									</div>
									<div class="form-floating mb-3">
										<input type="number" class="form-control" id="create-service-note-phone"
											name="phone" readonly>
										<label for="phone">Số điện thoại</label>
									</div>
									<div class="form-floating mb-3">
										<input type="text" class="form-control" id="create-service-note-address"
											name="address" readonly>
										<label for="address">Địa chỉ</label>
									</div>
								</li>
							</ul>
						</div>
						<div class="tab-pane fade" id="pills-service" role="tabpanel"
							aria-labelledby="pills-profile-tab">
							<div class="mb-3">
								<label for="service" class="form-label">
									<h6>Chọn dịch vụ</h6>
								</label>
								<select id="select-service" class="chosen-select" multiple tabindex="6" name="service">
									{{#each typeservices}}
									<optgroup label="{{this.name}}">
										{{#each this.services}}
										<option value="{{this.service}}">{{this.service}}</option>
										{{/each}}
									<optgroup>
										{{/each}}
								</select>
							</div>

							<div class="mb-3">
								<label for="performer" class="form-label">
									<h6>Nhân viên thực hiện</h6>
								</label>
								<select id="select-performer" class="chosen-select" multiple tabindex="6"
									name="performer">
									{{#each users}}
									<option value="{{this.firstName}} {{this.lastName}}">{{this.firstName}}
										{{this.lastName}}</option>
									{{/each}}
								</select>
							</div>

							<div class="mb-3">
								<label for="gender" class="form-label">
									<h6>Ngày hẹn</h6>
								</label>
								<input type="datetime-local" class="form-control" id="create-service-note-schedule"
									name="schedule">
							</div>

							<div class="mb-3">
								<label for="comment" class="form-label">
									<h6>Ghi chú: </h6>
								</label>
								<textarea class="form-control" id="create-service-note-description" rows="6"
									name="comment"></textarea>
							</div>
						</div>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng lại</button>
				<button type="button" id="create-service-note-btn" class="btn btn-primary">Lưu thay đổi</button>
			</div>
		</div>
	</div>
</div>

